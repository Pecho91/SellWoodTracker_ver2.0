<Window x:Class="SellWoodTracker_ver2_0.Views.Main.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SellWoodTracker_ver2_0.Views.Main"
        xmlns:viewModel="clr-namespace:SellWoodTracker_ver2_0.ViewModels.MainViewModels"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="8"
            Background="LightGray">
        
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0">
                
                    <TextBlock Text="Sell Wood Tracker"  
                                Background="Transparent"
                                Foreground="Black"
                                FontSize="18"
                                FontFamily ="Monteserrat"
                                FontWeight="Medium"
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0"/>
                    
                    <TextBlock Text="by Pecho"
                               Foreground="Black"
                               FontSize="12"                               
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                
                    <RadioButton Style="{StaticResource menuButton}">
                         <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/requested_task.png"                       
                                   Height="23"
                                   Width="23"
                                   Margin="15,0,5,0"/>
                            <TextBlock Text="Requested Buyers"
                                   Style="{StaticResource menuButtonText}"/>
                         </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/completed_task.png"                       
                                   Height="23"
                                   Width="23"
                                   Margin="15,0,5,0"/>
                            <TextBlock Text="Requested Buyers"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>  

                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/report_task.png"                       
                                   Height="23"
                                   Width="23"
                                   Margin="15,0,5,0"/>
                            <TextBlock Text="Report"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
               
            </StackPanel>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>

        </Grid>
       
    </Border>
</Window>
