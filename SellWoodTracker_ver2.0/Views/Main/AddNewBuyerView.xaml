<UserControl x:Class="SellWoodTracker_ver2_0.Views.Main.AddNewBuyerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SellWoodTracker_ver2_0.Views.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column ="0"
                 Orientation="Horizontal">
            <Image Source="/Images/buyer_task.png"                       
                 Height="22"
                 Width="22"
                 Margin="0,0,5,0"/>
            <TextBlock Text="Add New Buyer"
                Style="{StaticResource menuButtonText}"/>

        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Vertical"
                        HorizontalAlignment="Right"
                        Margin="0,30,0,0">

                <TextBox 
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="First Name: "/>

                <TextBox                         
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="Last Name: "/>

                <TextBox 
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="Phone number: "/>

                <TextBox 
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="Email: "/>

                <TextBox 
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="Date: "/>
                
                <TextBox 
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="Amount of m^3: "/>
                
                <TextBox 
                         Style="{StaticResource textBoxStyle}"
                         IsReadOnly="True"
                         Text="Price per m^3 (€): "/>

            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Left"
                         Margin="0,24,0,0">

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"
                         Text="{Binding NewBuyer.FirstName, Mode=TwoWay}"/>

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"
                         Text="{Binding NewBuyer.LastName, Mode=TwoWay}"/>

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"
                         Text="{Binding NewBuyer.CellphoneNumber, Mode=TwoWay}"/>

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"
                         Text="{Binding NewBuyer.EmailAddress, Mode=TwoWay}"/>

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"                        
                         Text="{Binding NewBuyer.DateTime, Mode=TwoWay}"/>

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"
                         Text="{Binding NewBuyer.MetricAmount, Mode=TwoWay}"/>

                 <TextBox 
                         Style="{StaticResource textBoxStyle2}"
                         Text="{Binding NewBuyer.MetricPrice, Mode=TwoWay}"/>    
                
                

            </StackPanel>

            
        </Grid>
    </Grid>
</UserControl>
